{
  "hosting": [
    {
      "target": "web",
      "public": "client",
      "cleanUrls": true,
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/ar{,/**}",
          "destination": "/index.ar.html"
        },
        {
          "source": "**",
          "destination": "/index.en.html"
        }
      ]
    }
  ]
}
